<UserControl
    x:Class="yoloNet.RtspView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cvt="using:yoloNet.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:yoloNet.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:RtspViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <cvt:RunningConverter x:Key="cvtRunState" />
        <cvt:RunningColorConverter x:Key="cvtRunColor" />


    </UserControl.Resources>
    <Design.DataContext>
        <vm:RtspViewModel />
    </Design.DataContext>

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--  操作栏区域  -->
        <Grid ColumnDefinitions="*,auto,auto,auto">
            <StackPanel Margin="5" VerticalAlignment="Center">
                <TextBlock
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontStyle="Oblique"
                    Foreground="Gold"
                    Text="RTSP地址：" />
                <TextBox
                    x:Name="rtspAdd"
                    FontSize="24"
                    Text="rtsp://admin:@192.168.31.143:554/live/0/SUB" />
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="5">
                <TextBlock
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontStyle="Oblique"
                    Foreground="Gold"
                    Text="抽帧间隔：" />
                <NumericUpDown
                    FontSize="24"
                    Increment="1"
                    Value="{Binding Interval}" />
            </StackPanel>
            <StackPanel
                Grid.Column="2"
                Margin="5"
                VerticalAlignment="Center">
                <TextBlock
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontStyle="Oblique"
                    Foreground="Gold"
                    Text="启动/停止：" />
                <Button
                    Width="100"
                    Height="41"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="{Binding IsRunning, Converter={StaticResource cvtRunColor}, ConverterParameter='1'}"
                    Command="{Binding StartCommand}"
                    CommandParameter="{Binding #rtspAdd.Text}"
                    Content="{Binding IsRunning, Converter={StaticResource cvtRunState}, FallbackValue='\ue750'}"
                    FontFamily="{StaticResource iconfont}"
                    FontSize="24"
                    Foreground="White" />
            </StackPanel>
            <StackPanel
                Grid.Column="3"
                Margin="5"
                VerticalAlignment="Center">
                <TextBlock
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontStyle="Oblique"
                    Foreground="Gold"
                    Text="清空训练图片：" />
                <Button
                    Width="100"
                    Height="41"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="#ef5350"
                    Command="{Binding ClearCommand}"
                    Content="&#xec08;"
                    FontFamily="{StaticResource iconfont}"
                    FontSize="24"
                    Foreground="White" />
            </StackPanel>
        </Grid>
        <!--  显示视频的区域  -->
        <Border
            Grid.Row="1"
            Margin="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="Gray"
            BorderThickness="1">
            <Canvas
                x:Name="canvas"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White" />
        </Border>

        <!--  状态栏区域  -->
        <Grid Grid.Row="2" ColumnDefinitions="*">
            <StackPanel
                Margin="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontStyle="Oblique"
                    Foreground="Gold"
                    Text="{Binding Width, StringFormat='宽度:{0}'},FallbackValue='宽度:1920'" />
                <TextBlock
                    Margin="5,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontStyle="Oblique"
                    Foreground="Gold"
                    Text="{Binding Height, StringFormat='高度:{0}'},FallbackValue='高度:1080'" />
                <TextBlock
                    Margin="5,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontStyle="Oblique"
                    Foreground="Gold"
                    Text="{Binding Fps, StringFormat='帧率:{0}'},FallbackValue='帧率:25'" />
                <TextBlock
                    Margin="5,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontStyle="Oblique"
                    Foreground="Gold"
                    Text="{Binding FrameCounter, StringFormat='帧号:{0}'},FallbackValue='帧号:200'" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
