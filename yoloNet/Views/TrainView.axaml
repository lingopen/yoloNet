<UserControl
    x:Class="yoloNet.TrainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cvt="using:yoloNet.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:yoloNet.ViewModels"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    x:DataType="vm:TrainViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:TrainViewModel />
    </Design.DataContext>

    <Grid
        Background="Black"
        ColumnDefinitions="*,*"
        RowDefinitions="*,auto,*">

        <!--  左上: YAML 编辑区  -->
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="4">
            <Grid RowDefinitions="auto,*">
                <TextBlock
                    Margin="5,0"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="data.yaml" />
                <TextBox
                    Grid.Row="1"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    AcceptsReturn="True"
                    FontFamily="Consolas"
                    Text="{Binding YamlContent, Mode=TwoWay}" />
            </Grid>
        </Border>

        <!--  右上: Python 编辑区  -->
        <Border
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="4">
            <Grid RowDefinitions="auto,*">
                <TextBlock
                    Margin="5,0"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="train_yolo.py" />
                <TextBox
                    Grid.Row="1"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    AcceptsReturn="True"
                    FontFamily="Consolas"
                    Text="{Binding PyContent, Mode=TwoWay}" />
            </Grid>
        </Border>
        <!--  底部操作按钮区  -->
        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="0,5,0,5"
            HorizontalAlignment="Center"
            Background="Black"
            Orientation="Horizontal"
            Spacing="10">

            <Button
                VerticalAlignment="Center"
                Background="#0d6efd"
                Command="{Binding SaveYamlCommand}"
                Content="保存 data.yaml"
                FontSize="16"
                Foreground="White" />

            <Button
                VerticalAlignment="Center"
                Background="#0d6efd"
                Command="{Binding SavePyCommand}"
                Content="保存 train_yolo.py"
                FontSize="16"
                Foreground="White" />

            <Button
                VerticalAlignment="Center"
                Background="#0d6efd"
                Command="{Binding StartTrainingCommand}"
                Content="开始训练"
                FontSize="16"
                Foreground="White" />

            <Button
                VerticalAlignment="Center"
                Background="#0d6efd"
                Command="{Binding StopTrainingCommand}"
                Content="停止训练"
                FontSize="16"
                Foreground="White" />

            <Button
                VerticalAlignment="Center"
                Background="#198754"
                Command="{Binding CreateValidationSetCommand}"
                Content="生成验证集"
                FontSize="16"
                Foreground="White" />
        </StackPanel>

        <!--  底部日志区  -->
        <Border
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="5"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="4">
            <Grid RowDefinitions="auto,*">
                <TextBlock
                    Margin="5,0"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="训练日志" />
                <ScrollViewer
                    x:Name="LogScrollViewer"
                    Grid.Row="1"
                    Margin="5"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">
                    <TextBox
                        Background="Black"
                        BorderThickness="0"
                        CaretBrush="Transparent"
                        FontFamily="Microsoft YaHei, Segoe UI, Arial"
                        Foreground="Gold"
                        IsReadOnly="True"
                        Text="{Binding Log}"
                        TextWrapping="Wrap" />
                </ScrollViewer>
            </Grid>
        </Border>

    </Grid>
</UserControl>
